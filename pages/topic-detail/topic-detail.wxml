<!-- pages/topic-detail/topic-detail.wxml -->
<navbar back text="话题详情"></navbar>
<view class="underlying">
    <view class="container">
        <view class="topic">
            <view class="topic-title">
                <text style='font-size: 36rpx;font-weight: bold;color: rgb(51, 51, 51);'>
                    {{topic.title}}
                </text>
            </view>
            <view class="topic-context" style='font-weight: 400;'>{{topic.context}}</view>
        </view>
    </view>
    <view class="opreate-underlying">
        <view class="container">
            <block wx:for="{{topic.cmtList}}" wx:for-item="comment">
                <listing addClass="item-card" aarrowBtn showTitle clock liked tId="{{topic.tId}}" cId="{{comment.cmtId}}">
                    <text slot="user" class="item-name">{{comment.cmtName}}</text>
                    <text slot="title" class="item-title">{{comment.title}}</text>
                    <view slot="context" class="item-context">{{comment.cmtContext}}</view>
                    <text slot="date">{{comment.cmtDate}}</text>
                    <text slot="like">{{comment.like}}</text>
                </listing>
            </block>
        </view>
    </view>
</view>