/* pages/index/index.wxss */


/*异常时显示的样式*/

.errView {
    height: 100%;
    display: flex;
    justify-content: center;
    /* align-items:center; */
    font-size: 26rpx;
    color: rgb(153, 153, 153);
}

.err-img {
    width: 242rpx;
    height: 233rpx;
    margin-left: 30rpx;
    margin-bottom: 50rpx;
}

.err-img+text {
    display: block;
    text-align: center
}

.first {
    width: 100%;
    height: auto;
    padding: 22rpx 28rpx;
    box-sizing: border-box;
    background-color: #fff;
}

.user {
    width: 100%;
    height: 52rpx;
    line-height: 50rpx;
    font-size: 26rpx;
}

.info {
    width: 52rpx;
    height: 52rpx;
    border-radius: 50%;
}

.user .name {
    color: #4ABABC;
    margin: 0 16rpx;
    line-height: 45rpx;
}

.user .text {
    color: #999;
    line-height: 45rpx;
}

.user .more {
    width: 32rpx;
    height: 7rpx;
    line-height: 26rpx;
}

.user .more .pot {
    width: 100%;
    height: 100%;
}

.title {
    font-size: 36rpx;
    color: #333;
    margin-top: 26rpx;
    font-weight: bold;
}

.content {
    width: 100%;
    height: auto;
    margin-top: 30rpx;
    line-height: 50rpx;
    color: #333;
}

.imgBox {
    width: 646rpx;
    height: 646rpx;
    margin-top: 27rpx;
    background-color: #666666;
}

.first.second .imgBox {
    width: 646rpx;
    height: 322rpx;
}

.first.second .imgBox image {
    width: 322rpx;
    height: 322rpx;
}

.first.second .one {
    margin-right: 2rpx;
}

.imgBox .one {
    width: 100%;
    height: 100%;
}

.bot {
    width: 100%;
    height: 31rpx;
    line-height: 31rpx;
    margin-top: 30rpx;
    display: flex;
    justify-content: space-between;
}

.left .block {
    width: 31rpx;
    height: 31rpx;
    margin-right: 12rpx;
}

.left .time {
    font-size: 28rpx;
    color: #666;
}

.bot .right,
.bot .left {
    height: 100%;
    width: auto;
}

.bot .right,
.bot .left {
    display: flex;
    justify-content: space-around;
}

.right .text {
    font-size: 26rpx;
    color: #666;
}

.star,
.msg {
    height: 100%;
    width: auto;
    display: flex;
}

.star {
    margin-right: 36rpx;
}

.stars,
.msgs {
    margin-right: 12rpx;
}

.star .stars {
    width: 31rpx;
    height: 25rpx;
    margin-top: 2rpx;
}

.msg .msgs {
    width: 31rpx;
    height: 31rpx;
}


/* 三张样式 */

.first.third .imgBox {
    width: 646rpx;
    height: 214rpx;
}

.first.third .imgBox image {
    width: 214rpx;
    height: 100%;
    margin-right: 2rpx;
    background-color: #999;
}

.first.third .imgBox image:last-child {
    margin-right: 0;
}

.first.sex .imgBox {
    width: 646rpx;
    height: 430rpx;
}

.first.sex .imgBox .top,
.first.sex .imgBox .bott {
    display: flex;
    justify-content: space-between;
}

.first.sex.top,
.first.sex.bott {
    width: 100%;
    height: 214rpx;
}

.first.sex .imgBox image {
    width: 214rpx;
    height: 214rpx;
    margin-right: 2rpx;
    background-color: #999;
}

.first.sex .top:last-child {
    margin-right: 0;
}

.first.sex .bott {
    margin-top: 2rpx;
}

.first.sex .bott:last-child {
    margin-right: 0;
}

.first.last {
    margin-bottom: 114rpx;
}