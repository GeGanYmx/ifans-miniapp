@import "/templates/thumbnail.wxss";
/* components/postCard/postCard.wxss */
/*每一项*/
view,
text {
  font-family: "Roboto", "Noto Sans", "San Francisco", "PingFang", "Microsof";
}

.publisher-item {
  margin: auto;
  width: 702rpx;
  height: auto;
  /* background-color: green; */
  border-bottom-style: solid;
  border-width: 4rpx;
  border-color: rgb(250, 250, 250);
  position: relative;
  background-color: #fff;
  /* box-shadow: rgba(6, 0, 1, 0.03) 0rpx 0rpx 20rpx 9rpx ; */
}

.publisher-person {
  height: 100rpx;
  width: 100%;
  /* background:pink; */
}

.avatar {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  background-color: gray;
  position: absolute;
  top: 20rpx;
  left: 26rpx;
}

.user-view {
  font-size: 26rpx;
  color: rgb(153, 153, 153);
  position: absolute;
  top: 30rpx;
  left: 102rpx;
  font-weight: 500;
  width: 500rpx;
}

/*用户名文本*/
.username {
  margin-right: 14rpx;
  display: inline-block;
}

/*右侧箭头按钮*/
.arrow-btn {
  width: 32rpx;
  height: 6rpx;
  position: absolute;
  top: 22rpx;
  right: 14rpx;
}

.arr-view {
  position: absolute;
  top: 26rpx;
  right: 30rpx;
  width: 60rpx;
  height: 60rpx;
}

.publisher-topic {
  height: auto;
  /* width: 100%; */
  background: #fff;
  font-size: 30rpx;
  color: rgb(153, 153, 153);
  margin-bottom: 12rpx;
  padding-left: 26rpx;
}

.text-weight {
  font-size: 36rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.publisher-context {
  height: auto;
  padding-left: 26rpx;
  padding-right: 26rpx;
  margin-bottom: 14rpx;
  /* margin-top: -60rpx; */
}

.topic-context {
  color: rgb(51, 51, 51);
  font-size: 30rpx;
  
}

.textView{
  margin-bottom:14rpx;
  font-size: 30rpx;
}

.topic-context .attendCmt {
  -webkit-line-clamp: 4;
  letter-spacing: 3rpx;
  line-height: 56rpx;
  display: -webkit-inline-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;

  font-size: 30rpx;
  font-family: PingFang;
  font-weight: 0;
  color: rgba(51, 51, 51, 1);

  /* margin-bottom:14rpx; */
}

.publisher-status {
  height: 80rpx;
  width: 100%;
  /* background:pink; */
  position: relative;
}

.clock-icon {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: 26rpx;
  top: 10rpx;
}

.publisher-date {
  position: absolute;
  font-size: 24rpx;
  color: rgb(102, 102, 102);
  left: 68rpx;
  top: 8rpx;
}


/*卡片效果*/
.item-card {
  margin-bottom: 26rpx;
  border-style: solid;
  border-width: 2rpx;
  /* border-color:#000; */
  border-radius: 24rpx;
  box-shadow: rgba(6, 0, 1, 0.03) 0rpx 0rpx 20rpx 9rpx;
}

/*举报弹出框*/
.popBox {
  width: 80rpx;
  height: 100rpx;
  background: red;
  position: absolute;
  top: 52rpx;
  right: 72rpx;
  /* display: block; */
}

.like-img {
  width: 31rpx;
  height: 26rpx;
  /* margin-left: 20rpx; */
}

.comment-img {
  width: 32rpx;
  height: 31rpx;
  margin-left: 38rpx;
}

.comment-count {
  /* position: relative;
  top: -5rpx; */
  margin-left: 11rpx;
}

/*下方点赞与评论区域*/
.likeComment {
  width: 200rpx;
  height: 100%;
  position: absolute;
  right: 0;
  display: flex;
  justify-content: flex-end;
  padding-right: 26rpx;
  padding-top: 10rpx;
}

.likeComment .count {
  line-height: 25rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

/*点赞*/
.likeComment .like {
  margin-left: 13rpx;
}

/*评论*/
.likeComment .cmt {
  margin-left: 11rpx;
}

.username {
  margin-right: 14rpx;
  color: #4ABABC;
  font-size: 26rpx;
  font-family: PingFang-SC-Heavy;
  font-weight: 800;
}