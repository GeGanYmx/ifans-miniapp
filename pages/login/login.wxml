<!--pages/login/login.wxml-->
<navbar gear text="授权登录"></navbar>
<view class="underlying">
<view wx:if="{{canIUse}}">
    <view class='header'>
        <image src='{{avatar}}'></image>
        <view>{{username}}</view>
    </view>

    <view class='content'>
        <view>申请获取以下权限</view>
        <text>获得你的公开信息(昵称，头像等)</text>
    </view>

    <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo">
        {{statusText}}
    </button>
</view>

<view wx:else>请升级微信版本</view>
</view>