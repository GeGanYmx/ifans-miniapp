        </view>
    </view>
    </view>
    </view>
       <view class="opreate-underlying">
        <view class="container">
                <listing  aarrowBtn clock liked showTitle style="border-style:none">
                    <text slot="user" class="item-name">{{comment.cmtName}}</text>
                    <text slot="title" class="item-title"> #整蛊大作战#</text>
                    <view slot="context" class="item-context">{{comment.cmtContext}}</view>
