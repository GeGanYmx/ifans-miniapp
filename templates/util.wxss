/*配图*/
.postImg {
  width:100%;
  display: flex;
  flex-wrap: wrap;
  flex-shrink: 0;
  margin-top: 20rpx;
}

/*单图*/
.postImg .one {
  background-color: gray;
  height: 646rpx;
  width: 646rpx
}


/*两图*/
.postImg .two {
  background-color: gray;
  height: 322rpx;
  width: 322rpx;
  margin-left: 2rpx;
}


/*三图*/
.postImg .three,
.postImg .more {
  background-color: gray;
  height: 214rpx;
  width: 214rpx;
  margin-left: 2rpx;
}

/*更多*/
.postImg .more {
  background-color: gray;
  height: 214rpx;
  width: 214rpx;
  margin-left: 2rpx;
  margin-top: 2rpx;
}

/*页面崩溃*/
image.err {
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto;
  display: block;
  margin-top: 197rpx;
}

text.err {
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 0.5);
  line-height: 50px;
  margin-top: 46rpx;
  display: block;
  text-align: center;
}


/*缺省页面*/
.default {
  display: flex;
  flex-direction: column;
}

.default .tipImg {
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto;
  margin-top: 281rpx;
}

.default text.tip {
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  text-align: center;
  margin-top: 42rpx;
  margin-bottom: 16rpx;
