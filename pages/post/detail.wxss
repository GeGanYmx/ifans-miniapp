/* pages/topic-detail/topic-detail.wxss */

.body {
    width: 100%;
    height: auto;
    padding-top: 128rpx;
    padding-bottom: 30rpx;
    box-sizing: border-box;
    position: relative;
    background-color: rgb(255, 255, 255);
}

.content {
    width: 100%;
    height: auto;
}

.content .title {
    width: 100%;
    height: 87rpx;
    line-height: 50rpx;
    font-weight: bold;
    padding: 0 31rpx 0 36rpx;
    box-sizing: border-box;
    margin-top: 33rpx;
    font-size: 36rpx;
    color: #333;
}

.userInfo {
    width: 100%;
    height: 64rpx;
    padding: 0 34rpx;
    margin-top: 58rpx;
    position: relative;
    box-sizing: border-box;
}

.userInfo .user {
    height: 100%;
    width: auto;
}

.userInfo .img {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    margin-right: 18rpx;
}

.user .text {
    height: 100%;
    text-align: center;
    font-size: 28rpx;
    font-weight: bold;
    color: rgba(74, 186, 188, 1);
    line-height: 64rpx;
}

.userInfo .more {
    width: 32rpx;
    height: 7rpx;
    position: absolute;
    right: 45rpx;
    top: 10rpx;
}

.userInfo .more image {
    width: 100%;
    height: 100%;
}


/*右侧箭头按钮*/

.arrow-btn {
    width: 32rpx;
    height: 6px;
    position: absolute;
    top: 44rpx;
    right: 44rpx;
}

.article {
    width: 100%;
    height: auto;
    line-height: 60rpx;
    font-size: 31rpx;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    padding-left: 40rpx;
    box-sizing: border-box;
    word-break: keep-all;
    word-wrap: break-word;
}

.txt {
    width: 100%;
    height: auto;
    display: inline-block;
    margin-top: -50rpx;
}

.bottom {
    width: 100%;
    height: 31rpx;
    line-height: 31rpx;
    margin-top: 30rpx;
    padding: 0 40rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
}

.bottom .left,
.bottom .right {
    height: 100%;
    width: auto;
    display: flex;
    justify-content: space-between;
}

.bottom .block {
    width: 28rpx;
    height: 28rpx;
    margin-right: 16rpx;
}

.bottom .time,
.right .text {
    font-size: 26rpx;
    color: #666;
}

.right .star,
.right .msg {
    margin-right: 38rpx;
}

.right .star,
.right .msg,
.right .replys {
    width: auto;
    height: 100%;
    display: flex;
    justify-content: space-between;
}

.right .stars,
.right .msgs {
    margin-right: 12rpx;
}

.right .msgs,
.right .rep {
    width: 31rpx;
    height: 31rpx;
}

.right .stars {
    width: 31rpx;
    height: 26rpx;
}


/*覆盖微信默认样式*/

.operate-btn:after {
    border-style: none
}

.noMore {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    color: #BDBDBD;
    margin-bottom: 90rpx;
}

.reply {
    width: 100%;
    height: 90rpx;
    background-color: #fff;
    border-top: 2rpx solid #F4F5F9;
    padding: 15rpx 114rpx 15rpx 100rpx;
    box-sizing: border-box;
}

.reply .img {
    width: 100rpx;
    height: 100%;
    padding: 18rpx 24rpx;
    box-sizing: border-box;
    position: absolute;
    left: 0;
    top: 0;
}

.reply .img image {
    width: 100%;
    height: 100%;
}

.reply .content {
    width: 100%;
    height: 100%;
    font-size: 26rpx;
    padding-left: 22rpx;
    box-sizing: border-box;
    background-color: #F4F5F9;
}

.reply .btn {
    width: 114rpx;
    height: 100%;
    font-size: 28rpx;
    color: #999999;
    background-color: #fff;
    line-height: 90rpx;
    text-align: center;
    position: absolute;
    padding: 0;
    right: 0;
    top: 0;
}


/* 蒙层 */

.mask {
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.3;
    position: absolute;
    top: 0;
}