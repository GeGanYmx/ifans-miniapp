<!-- pages/participate/participate.wxml -->
<wxs module="con" src="../../wxs/converter.wxs"></wxs>
<navbar back text="发布话题"></navbar>
<view class="underlying flex-urly">
  <view>
    <view class="heard ">
      <view class="container">
        <view class="parti-header">
         
          <textarea class="topic-text" placeholder="请输入标题" maxlength="-1" placeholder-class="placeholder-set" bindinput="titleInput" bindconfirm="editerConfirm" value="{{titleValue}}" adjust-position="{{false}}" style="height:{{titleStyle}}" bindfocus="titleFocus" bindblur="editerConfirm"></textarea>
        </view>
      </view>
    </view>
    <view class="container">
     
      <textarea class="topic-text" placeholder="请输入内容" maxlength="-1" placeholder-class="placeholder-set" bindinput="textAreaInput" bindconfirm="onEndEditor" value="{{pushText}}" adjust-position="{{false}}" style="height:{{inputText}}" bindfocus="onEditText" bindblur="onEndEditor"></textarea>
    </view>
  </view>
  <view class="content">
    <view class="text">
      话题内容（可选）
    </view>
   
  </view>

  <view class="foot">
    <button class="btn">发表</button>
  </view>
</view>