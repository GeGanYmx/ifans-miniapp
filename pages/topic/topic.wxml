        </view>
        <image class="content-img" src="{{item.banner}}" bindtap="bindViewTopicDetail"></image>

         <view class="content-content">
           <view>
             <image src="../../imgs/home-button-Comment.png" class="operation-icon"></image>
             <text>99</text>
           </view>
           <view>
             <image src="../../imgs/home-button-like.png" class="operation-icon"></image>
             <text>99</text>
           </view>
           <view>
             <image src="../../imgs/home-button-Share.png" class="operation-icon" style="height:15px;"></image>
           </view>
        </view>
        
        </view>
        
      </view>
    </view>
     <!--每一个动态-->
  </view>

  <view class="footer">
  <!--悬浮按钮-->
     <view class="fixed-btn" style="margin-right:28px;">
       <view class="fixed-btn-view" bindtap="bindViewParticipate">
       <image src='../../imgs/participate.png'></image>
       <text>参与</text>
       </view>
     </view>
     <view class="fixed-btn">
      <view class="fixed-btn-view">
       <image src='../../imgs/share.png'></image>
       <text>分享</text>
      </view>
     </view>
  </view>
  
 </view>
</view>
