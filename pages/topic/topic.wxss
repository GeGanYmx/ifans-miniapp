/**app.wxss**/
/*底层*/

.top{
  width:100%;
  height:auto;

  background-color: #fff;
  border-bottom:4px solid #E8E8E8;

  overflow: hidden;
  position: relative;
}
.top-img{
  width:100%;
  height: 230px;
  /*background-color: yellow;*/
  background-color: #000;
  background-repeat: no-repeat;
  /*破坏top-group的margin-top*/
  overflow: hidden;
  position: relative;
}
.top-img>image{
  width:100%;
  height:230px;
  opacity:0.8;
  /*background-color: gray;*/
}
/*热门话题*/
#hot-topic{
  width:18px;
  height:18px;
  position:absolute;
  top:10px;
  left:10px;
}
.top-text{
  width:177px;
  height:70px;
  /*background-color: blue;*/
  background-color:transparent;
  margin-top:13px;
  /*margin-left:21px;*/
  color:gray;
  font-size:12px;
  /*文本对元素内空白的处理：保留空白，类似<pre>*/
  white-space: pre;
}
.topic-text{
  display:block;
