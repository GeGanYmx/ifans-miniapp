<!-- pages/participate/participate.wxml -->
<wxs module="con" src="../../wxs/converter.wxs"></wxs>
<navbar back text="参与话题"></navbar>
<view class="underlying flex-urly">
  <!-- <view> -->
    <view class="title ">
      <!-- <view class="container"> -->
        <!-- <view class="parti-header"> -->
          <text class='tit'>
            #{{con.contextCon(topic.post.title,30)}}#
          </text>
        <!-- </view> -->
      <!-- </view> -->
    </view>
    <view class="content">
      <!-- 这里bindinput可以，bind:input不可以？ -->
      <!-- auto-height="{{true}}"将导致textarea失效 -->
      <textarea class="topic-text" placeholder="请至少输入5个字" maxlength="-1" placeholder-class="placeholder-set" bindinput="textAreaInput" bindconfirm="onEndEditor" value="{{pushText}}" adjust-position="{{false}}" style="height:{{inputText}}" bindfocus="onEditText"
        bindblur="onEndEditor"></textarea>

      <view class="uploadPicArea">

        <!-- 显示图片 -->
        <view class="pic" wx:for="{{image2Commit}}" data-index='{{index}}'>
          <image src='{{item.imageURL}}' mode='aspectFill' class='picShow' data-index='{{index}}'></image>
          <view class="delBg" bind:tap='delPic' data-index='{{index}}'>
            <view class='delBtn' data-index='{{index}}'>
              <image mode='aspectFill' class='delBtnPic' src="../../imgs/picDel.png" data-index='{{index}}'></image>
            </view>
          </view>
        </view>

        <!-- 上传按钮 -->
        <view class="picUploadBtn" bind:tap='didPressChooesImage'>
          <image src="../../imgs/picAdd.png" mode='aspectFill' class='addBtnPic'></image>
        </view>
      </view>

    </view>
  <!-- </view> -->
  <view class="footer">
    <!-- <view class="container"> -->
      <!-- <view class="expression-view"> -->
        <button  class="btn" catch:tap="titleParti">
          发表
        </button>
      <!-- </view> -->
    <!-- </view> -->
  </view>
</view>