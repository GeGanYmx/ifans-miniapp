<!-- pages/participate/participate.wxml -->
<wxs module="con" src="../../wxs/converter.wxs"></wxs>
<navbar back text="参与话题"></navbar>
<view class="underlying flex-urly">
    <view class="title ">
          <text class='tit'>
            #{{con.contextCon(topic.title,30)}}#
          </text>
    </view>
    <view class="content">
      <textarea class="topic-text" placeholder="请至少输入5个字" placeholder-style="color: #C3C3C3;font-weight:400" maxlength="-1" placeholder-class="placeholder-set" bindinput="textAreaInput" bindconfirm="onEndEditor" value="{{pushText}}" adjust-position="{{false}}" style="height:{{inputText}}" bindfocus="onEditText"
        bindblur="onEndEditor"></textarea>
      <view class="uploadPicArea">
        <!-- 显示图片 -->
        <view class="pic" wx:for="{{image2Commit}}" data-index='{{index}}' wx:if="{{image2Commit}}">
          <image src='{{item}}' mode='aspectFill' class='picShow' data-index='{{index}}'></image>
          <view class="delBg" bind:tap='delPic' data-index='{{index}}'>
            <view class='delBtn' data-index='{{index}}'>
              <image mode='aspectFill' class='delBtnPic' src="../../imgs/picDel.png" data-index='{{index}}'></image>
            </view>
          </view>
        </view>
        <!-- 上传按钮 -->
        <view class="picUploadBtn" bind:tap='didPressChooesImage'>
          <image src="../../imgs/picAdd.png" mode='aspectFill' class='addBtnPic'></image>
        </view>
      </view>
    </view>
  <view class="footer">
    <button  class="btn" catch:tap="clickPublish">
      发表
    </button>
  </view>
</view>