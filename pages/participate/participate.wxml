<!--pages/participate/participate.wxml-->
<wxs module="ani" src="../../wxs/animation.wxs"></wxs>
<navbar back text="参与话题"></navbar>

<view class="underlying flex-urly">
<view>
<view class="heard ">
    <view class="container">
        <view class="parti-header">
            <text style="margin-left:36rpx">#{{topic.post.title}}#</text>
        </view>
    </view>
</view>
<view class="container" style="">
<!--这里bindinput可以，bind:input不可以？-->
<!--auto-height="{{true}}"将导致textarea失效-->
       <textarea class="topic-text" placeholder="请至少输入5个字" 
          maxlength="-1"  placeholder-class="placeholder-set" 
          bindinput="textAreaInput" bindconfirm="onEndEditor" value="{{pushText}}" adjust-position="{{false}}" 
          style="height:{{inputText}};" bindfocus="onEditText" bindblur="onEndEditor">
       </textarea>
</view>
</view>
<view class="footer">
    <view class="container">
     <view class="expression-view">
         <!-- <image style="height:50rpx;width:50rpx;margin-left:56rpx" src="../../imgs/button-bq@2x.png"/>
         <text style="font-size:32rpx;color:rgb(51,51,51);display:block;margin-right:56rpx" catch:tap="titleParti">发表</text> -->
         <button type="primary" style="height:80rpx;background-color:rgb(82,163,255);width:100%;font-size:33rpx;" catch:tap="titleParti">发表</button>
     </view>
    </view>
</view>
</view>
