/* pages/index/index.wxss */

.index-contant{
  background-color: rgb(245,245,245);
  padding-bottom: 50rpx;
}
.index-subscribe{
  height: 98rpx;
  text-align: right;
  padding-right: 64rpx;
 background-color: rgb(245,245,245)
	}
.img-subcribe{
  width: 30rpx;
  height: 30rpx;
  /* margin-top: 30rpx; */

}
.index-subscribe text{
  margin-left: 18rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  color: rgb(17, 17, 17);
 
}
/* 修改样式 */
.topic-name{
 font-weight: 500;
}
.comment-name{
  font-weight: 500;
  color:rgb(51, 51, 51);
}
.text-weight{
  font-size: 36rpx;
  font-weight: bold;
  color: rgb(51, 51, 51);
}
.topic-context{
 font-weight: 400;
 white-space: pre-line;
 display: -webkit-box;        
word-break: break-all;
text-overflow: ellipsis; 
overflow: hidden;           
-webkit-box-orient: vertical;    
-webkit-line-clamp: 5; 
}
.conmment-weight{
  font-weight: 400;
  font-size: 30rpx;
  color: rgb(153, 153, 153);
}
.item-name{
  font-size: 28rpx;
  font-weight: bold;
   width: 500rpx;
    color: rgb(51, 51, 51);
}
.item-title{
 font-weight: 500;
}
.item-context{
  color: rgb(51, 51, 51);
  font-weight: 300;
  white-space: pre-line;
 display: -webkit-box;        
word-break: break-all;
text-overflow: ellipsis; 
overflow: hidden;           
-webkit-box-orient: vertical;    
-webkit-line-clamp: 15; 
}
.subscribe-btn{
  width:240rpx;
height:40px;
float:right;
padding:0;
display:flex;
align-items:center;
justify-content:center;
margin-top: 16rpx;
background-color:rgb(245, 245, 245);
}
.subscribe-btn:after{
  border-style: none;
}

/*异常时显示的样式*/
.errView{
  height:100%;
display:flex;
justify-content:center;
/* align-items:center; */
font-size:26rpx;
color:rgb(153, 153, 153);
}
.err-img{
  width:242rpx;
  height:233rpx;
  margin-left:30rpx;
  margin-bottom:50rpx;
}
.err-img+text{
  display:block;
  text-align:center
}

