<!-- pages/index/index.wxml -->
<navbar gear text="首页" class="navbar-index"></navbar>
<view class="underlying">
      <view class='index-subscribe'>
            <view style="width:240rpx;float:right;" bind:tap="bindViewHot">
                  <image class="img-subcribe" src='../../imgs/add.png'></image>
                  <text>订阅每日热点</text>
            </view>
      </view>
      <view class="container">
            <block wx:for="{{toplicList}}">
                  <listing card showTitle showIssue clock like tId="{{item.tId}}" username="{{item.tName}}">
                        <text slot="user" class="topic-name">{{item.tName}}</text>
                        <text slot="title" class="text-weight">{{item.title}}</text>
                        <view slot="context" class="topic-context">{{item.context}}</view>
                        <text slot="date">{{item.tDate}}</text>
                        <text slot="like">{{item.tLike}}</text>
                  </listing>
                  <block wx:for="{{item.cmtList}}" wx:for-item="cmItem">
                        <listing card arrowBtn showTitle clock like tId="{{item.tId}}" cId="{{cmItem.cmtId}}" username="{{cmItem.cmtName}}">
                              <text slot="user" class="item-name">{{cmItem.cmtName}}</text>
                              <text slot="title" class="item-title">{{item.title}}</text>
                              <view slot="context" class="item-context">{{cmItem.cmtContext}}</view>
                              <text slot="date">{{cmItem.cmtDate}}</text>
                              <text slot="like">{{cmItem.like}}</text>
                        </listing>
                  </block>
            </block>
      </view>
</view>