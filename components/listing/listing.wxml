<!--components/listing/listing.wxml-->
 <view class="publisher-item {{addClass}}" bind:tap="bindRouter" data-tid="{{tId}}" data-cid="{{cId}}">
            <view class="publisher-person">
             <image src="" class="avatar"/>
             <view class="user-view">
                 <view class="username">
                     <!--插入姓名-->
                     <slot name="user"></slot>
                </view>
                 <text wx:if="{{showIssue}}">发布了话题</text>
            </view>
             <image src="../../imgs/myhome-gd@2x.png" class="arrow-btn" wx:if="{{arrowBtn}}"/>
            </view>
            <view class="publisher-topic" wx:if="{{showTitle}}">
                <view style="margin-left:26rpx;display:inline-block">
                    <!--插入话题标题-->
                    <slot name="title"></slot>
                </view>
            </view>
            <view class="publisher-context">
             <!--插入评论话题的内容-->
              <slot name="context"></slot>
            </view> 
            <view class="publisher-status" wx:if="{{clock||like||liked}}">
              <image src="../../imgs/button-time@2x.png" class="clock-icon" wx:if="{{clock}}"/>
              <view class="publisher-date">
                  <!-- <text>2019/03/20</text> -->
                  <slot name="date"></slot>
             </view>
              <view class="heart-view">
              <image src="../../imgs/home-button-like@2x.png" style="width:26rpx;height:22rpx;" wx:if="{{like}}"/>
              <image src="../../imgs/button-like-dj@2x.png" style="width:26rpx;height:22rpx;" wx:elif="{{liked}}"/>

              <view style="margin-left:20rpx;display:inline-block">
                  <!-- <text >99</text> -->
                  <slot name="like"></slot>
              </view>
              </view>
            </view>
        </view>
