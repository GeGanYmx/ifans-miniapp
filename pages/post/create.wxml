<!-- pages/participate/participate.wxml -->
<wxs module="con" src="../../wxs/converter.wxs"></wxs>
<navbar back text="发布话题"></navbar>
<view class="body">
    <view class="title">
        <input placeholder="请输入标题" class="tit" auto-focus />
    </view>
    <view class="content">
        <textarea class="text" placeholder="请输入内容" maxlength="-1" placeholder-class="placeholder-set" bindinput="textAreaInput" bindconfirm="onEndEditor" value="{{pushText}}" adjust-position="{{false}}" style="height:{{inputText}}" bindfocus="onEditText" bindblur="onEndEditor"></textarea>
    </view>
    <view class="foot">
        <button class="btn">发表</button>
    </view>
</view>