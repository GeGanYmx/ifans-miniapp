<navbar back text="参与话题"></navbar>
<view class="underlying flex-urly">
<view>
<view class="heard ">
    <view class="container">
        <view class="parti-header">
            <text style="margin-left:36rpx">#整蛊大行动</text>
        </view>
    </view>
</view>
<view class="container">
       <textarea class="topic-text" placeholder="请至少输入20个字" 
          maxlength="-1" auto-height="{{true}}" placeholder-class="placeholder-set"
          show-confirm-bar="{{false}}" value="{{pushText}}" bind:input="{{setPushText}}" bindfocus="{{test}}">
       </textarea>
</view>
</view>
<view class="footer">
    <view class="container">
     <view class="expression-view">
         <image style="height:50rpx;width:50rpx;margin-left:56rpx" src="../../imgs/button-bq@2x.png"/>
         <text style="font-size:32rpx;color:rgb(51,51,51);display:block;margin-right:56rpx" catch:tap="titleParti">发表</text>
     </view>
    </view>
</view>
</view>
