.commentBox {
    width: 100%;
    border-top: 2rpx solid #F4F5F9;
    padding-left: 100rpx;
    padding-top: 30rpx;
    box-sizing: border-box;
}

.com-item {
    width: 100%;
    display: flex;
    line-height: 55rpx;
    margin-top: 40rpx;
    flex-direction: column;
    position: relative;
}

.com-item .user {
    width: 72rpx;
    height: 72rpx;
    border-radius: 36rpx;
    position: absolute;
    top: -4rpx;
    left: -90rpx;
}

.com-item .name {
    font-size: 28rpx;
    color: #4ABABC;
    font-weight: bold;
}

.com-item .star {
    width: auto;
    height: 44rpx;
    position: absolute;
    right: 14rpx;
    top: 16rpx;
    font-size: 26rpx;
    display: flex;
    justify-content: space-between;
}

.com-item .star .stars {
    width: 44rpx;
    height: 44rpx;
    margin-right: 6rpx;
}

.com-item .star .num {
    height: 100%;
    line-height: 44rpx;
    color: #666;
}

.com-item .time {
    font-size: 24rpx;
    color: #666;
    line-height:3.0;
}
