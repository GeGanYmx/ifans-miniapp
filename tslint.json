{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "no-console": {
      "severity": "warning",
      "options": [ "debug", "info", "log", "time", "timeEnd", "trace" ]
    },
    "typedef": false,
    "forin": false,
    "no-var-requires": false,
    "only-arrow-functions": false,
    "object-literal-sort-keys": false,
    "member-access": false,
    "semicolon": [true, "never"],
    "quotemark": [true, "single"]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "whitespace": [false],
    "semicolon": [true, "never"],
    "quotemark": [true, "single"]
  },
  "linterOptions": {
    "exclude": ["api/fake.zh_CN.js", "node_modules"]
  }
}
