/*话题人，发布日期等*/
.publish{
  height:100%;
  width:220px;
  /*background-color:red;*/
  display:flex;
  /*空间不够自动换行*/
  flex-wrap: wrap;
  overflow: hidden;
}
.publish-name,.publish-status{
  display: block;
  font-size:13px;
  height:20px;
  margin-top: 5px;
}
.publish-name{
  width:auto;
  margin-right:10px;
  margin-left:5px;
}
.publish-status{
  width:68px;
}
.publish-time{
  font-size:10px;
  color:#BBB;
  height:15px;
  display: block;
  margin-left:5px
}
/*关注按钮*/
.focus-btn{
  width:48px;
  height:28px;
  background-color:yellow;
  color:#FFF;
  font-size:13px;
  text-align: center;
  /*消除按钮内边距*/
  padding: 0 0 0 0;
  /*行高和按钮一样高，则可以自动居中*/
  line-height: 28px;
  margin-top:5px;
  margin-left:3px;
  display: inline-block;
}
/*关注按钮旁的按钮*/
.img-btn{
width:18px;
height:13px;
margin-bottom:7px;
margin-left: 6px;
}

.publish-view{
  height:45px;
  background-color:#FFF;
  display:flex;
  margin-bottom:5px;
}

/*发布者头像*/
.publish-head{
  width:45px;
  height:45px;
  border-radius:50%;
  background-color: gray;
}

