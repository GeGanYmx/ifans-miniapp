.underlying{
  width:100%;
  height:auto;
  background-color:#FFF; 
}
.container{
  width:351px;
  height:auto;
  /* background-color:blue; */
  margin:0 auto;
}

.topic-item{
  width:351px;
height:236px;
background:#FFF; 
border-bottom-style:solid;
border-bottom-width:1px;
border-bottom-color:rgb(244,244,244);
margin-bottom:10px;
}

/*发布人的展示区*/
.topic-view{
  width:320px;
  height:66px;
  /*background:pink;*/
  margin:0 auto;
  overflow:hidden;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  border-style:solid;
border-width:1px;
border-color:rgb(244,244,244);

}

/*发布者头像*/
.pusblish-head{
  width:45px;
  height:45px;
  border-radius:50%;
  background-color:rgb(244,244,244);
  margin-left:6px;
}
/*话题人，发布日期等*/
.publish{
  height:100%;
  width:220px;
  /*background-color:red;*/
  display:flex;
  /*空间不够自动换行*/
  flex-wrap: wrap;
  overflow: hidden;
}
.publish-name,.publish-status{
  display: block;
  font-size:13px;
  height:20px;
  margin-top: 5px;
}
.publish-name{
  width:auto;
  margin-right:10px;
  margin-left:5px;
}
.publish-status{
  width:130px;
}
.publish-time{
  font-size:10px;
  color:#BBB;
  height:15px;
  display: block;
  margin-left:5px
}
/*关注按钮*/
.focus-btn{
  width:48px;
  height:28px;
  background-color:yellow;
  color:#FFF;
  font-size:13px;
  text-align: center;
  /*消除按钮内边距*/
  padding: 0 0 0 0;
  /*行高和按钮一样高，则可以自动居中*/
  line-height: 28px;
  margin-top:5px;
  margin-left:3px;
  display: inline-block;
}
/*关注按钮旁的按钮*/
.img-btn{
width:18px;
height:13px;
margin-bottom:7px;
margin-left: 6px;
}

.img-card{
  height:160px;
  width:100%;
  border-radius: 10px;
  opacity: 0.6;
}
.card-underlying{
  background-color:#000;
height:160px;
border-radius:10px;
position: relative;
}
