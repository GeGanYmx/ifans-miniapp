/* pages/post/report.wxss */
.header {
  height: 60rpx;
  width: 100%;
  /* background: pink; */
  display: flex;
  align-items: center;
}

.tip {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  margin-left: 37rpx;
}

.main {
  width: 100%;
  /* height: 1146px; */
  background: rgba(255, 255, 255, 1);
  /* padding-left: 37rpx; */
}

.item {
  width: 713rpx;
  height: 80rpx;
  /* background: yellow; */
  display: flex;
  align-items: center;
  border-bottom-style: solid;
  border-width: 2rpx;
  border-color: rgba(244, 245, 249, 1);
}

.item text.report {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.radio {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 25rpx;
}

/* radio未选中时样式 */

radio .wx-radio-input {
  border-radius: 50%;
  height: 32rpx;
  width: 32rpx;
  margin-top: -4rpx;
  /* 自定义样式.... */
}

textarea.report {
  width: 703rpx;
  height: 276rpx;
  margin:0 auto;
  margin-top: 25rpx;
  background: rgba(244, 245, 249, 1);
  border-radius: 8rpx;
}

.radio-group{
    padding-left: 37rpx;
}

