<!--topic.wxml-->
<!--引用自定义的navibar组件-->
<!-- <navbar back text="{{navigationBarTitle}}"></navbar> -->

<view class="underlying">
<view class="container">
<!--头部-->
<view class="top">
<view style="height:90rpx;background-color:#FFF;display:flex;margin-bottom:5px;">
<!-- <image class="pusblish-head" src="../../imgs/imgs.jpg" alt="暂无图片"></image> -->
<image class="pusblish-head" src="{{data.topic.user.avatar}}" alt="暂无图片"></image>
<view class="publish">
  <text class="publish-name">{{data.topic.user.name}}</text>
  <text class="publish-status">发布了这个话题</text>
  <text class="publish-time">{{creatAt}}</text>
</view>
<view style="height:100%;width:86px;">
 <button class="focus-btn">关注</button>
 <image src="../../imgs/6.png" class="img-btn"></image>
</view>
</view>
<!--图片-->
<view class="top-img">
    <image src="{{data.topic.banner}}"></image>
    <text class="topic-text">{{data.topic.text}}</text>
    <!--热门话题标识-->
    <image src="../../imgs/home-icon-huo.png" id="hot-topic" wx:if="{{true}}"></image>
</view>
<view class="fan-refl">
  <view style="margin-left:30px;">
    <image src="../../imgs/home-button-Comment.png" class="operation-icon"></image>
    <text>99</text>
    </view>
  <view>
    <image src="../../imgs/home-button-like.png" class="operation-icon"></image>
    <text>99</text>
    </view>
  <view  style="margin-right:0px;">
    <image src="../../imgs/home-button-Share.png" class="operation-icon" style="height:15px"></image>
    </view>
</view>
</view>


  <!--主体-->
  <view class="article">
  <!--要做选项卡-->
    <view class="tab">
      最热     最新
    </view>
    
    <!--每一个动态-->
    <view class="article-item" wx:for="{{data.posts}}">
      <!--上部-->
      <view class="item-top">
        <image src="{{item.user.avatar}}" class="head-img"></image>
        <text class="comment-name">{{item.user.name}}</text>
        <text class="comment-time">2019年03月13日</text>
        <image src="../../imgs/home-button-gengduo.png" class="right-smlbtn"></image>
      </view>
      <!--下部-->
      <view class="item-down">
        <text class="comment-title">{{item.title}}</text>
        <view class="commetn-text">{{item.text}}</view>
        <image class="content-img" src="{{item.banner}}"></image>
        <view class="content-content">
           <view>
             <image src="../../imgs/home-button-Comment.png" class="operation-icon"></image>
             <text>99</text>
           </view>
           <view>
             <image src="../../imgs/home-button-like.png" class="operation-icon"></image>
             <text>99</text>
           </view>
           <view>
             <image src="../../imgs/home-button-Share.png" class="operation-icon" style="height:15px;"></image>
           </view>
        </view>
      </view>
    </view>
    
     <!--每一个动态-->
   

  </view>

  <view class="footer">
  <!--悬浮按钮-->
     <view class="fixed-btn" style="margin-right:28px;">
       <view class="fixed-btn-view">参与</view>
     </view>
     <view class="fixed-btn">
      <view class="fixed-btn-view">邀请</view>
     </view>
  </view>
  
 </view>
</view>
